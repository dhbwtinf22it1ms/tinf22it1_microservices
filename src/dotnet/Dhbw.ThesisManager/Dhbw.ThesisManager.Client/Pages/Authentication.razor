@page "/authentication/{action}"
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication

<RemoteAuthenticatorView Action="@Action">
    <LoggingIn>
        <div class="d-flex justify-content-center mt-5">
            <div class="card p-4 shadow">
                <h3 class="text-center mb-4">Logging in...</h3>
                <div class="d-flex justify-content-center">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
                <p class="text-center mt-3">You are being redirected to the login page...</p>
            </div>
        </div>
    </LoggingIn>
    <CompletingLoggingIn>
        <div class="d-flex justify-content-center mt-5">
            <div class="card p-4 shadow">
                <h3 class="text-center mb-4">Completing Login</h3>
                <div class="d-flex justify-content-center">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
                <p class="text-center mt-3">Please wait while we complete the login process...</p>
            </div>
        </div>
    </CompletingLoggingIn>
    <LogInFailed>
        <div class="d-flex justify-content-center mt-5">
            <div class="card p-4 shadow">
                <div class="text-center text-danger mb-4">
                    <i class="bi bi-exclamation-triangle" style="font-size: 3rem;"></i>
                </div>
                <h3 class="text-center mb-3">Login Failed</h3>
                <p class="text-center">There was a problem logging you in. Please try again.</p>
                <div class="d-flex justify-content-center mt-3">
                    <a href="" class="btn btn-primary">Return to Home</a>
                </div>
            </div>
        </div>
    </LogInFailed>
    <LogOut>
        <div class="d-flex justify-content-center mt-5">
            <div class="card p-4 shadow">
                <h3 class="text-center mb-4">Logging out...</h3>
                <div class="d-flex justify-content-center">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
                <p class="text-center mt-3">You are being logged out...</p>
            </div>
        </div>
    </LogOut>
    <LogOutSucceeded>
        <div class="d-flex justify-content-center mt-5">
            <div class="card p-4 shadow">
                <div class="text-center text-success mb-4">
                    <i class="bi bi-check-circle" style="font-size: 3rem;"></i>
                </div>
                <h3 class="text-center mb-3">Logged Out Successfully</h3>
                <p class="text-center">You have been successfully logged out.</p>
                <div class="d-flex justify-content-center mt-3">
                    <a href="" class="btn btn-primary">Return to Home</a>
                </div>
            </div>
        </div>
    </LogOutSucceeded>
    <LogOutFailed>
        <div class="d-flex justify-content-center mt-5">
            <div class="card p-4 shadow">
                <div class="text-center text-danger mb-4">
                    <i class="bi bi-exclamation-triangle" style="font-size: 3rem;"></i>
                </div>
                <h3 class="text-center mb-3">Logout Failed</h3>
                <p class="text-center">There was a problem logging you out. Please try again.</p>
                <div class="d-flex justify-content-center mt-3">
                    <a href="" class="btn btn-primary">Return to Home</a>
                </div>
            </div>
        </div>
    </LogOutFailed>

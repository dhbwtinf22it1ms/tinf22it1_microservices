@page "/"

<div class="container mt-4">
    <div class="jumbotron">
        <h1 class="display-4">Welcome to DHBW Thesis Manager</h1>
        <p class="lead">A comprehensive system for managing bachelor theses at DHBW.</p>
        <hr class="my-4">
        <p>Use the navigation menu to access the different features of the application.</p>
    </div>

    <div class="row mt-5">
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-body text-center">
                    <h3 class="card-title"><i class="bi bi-file-earmark-text mb-3" style="font-size: 2rem;"></i></h3>
                    <h5>My Thesis</h5>
                    <p class="card-text">Create and manage your bachelor thesis.</p>
                    <a href="my-thesis" class="btn btn-primary">Go to My Thesis</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-body text-center">
                    <h3 class="card-title"><i class="bi bi-list-ul mb-3" style="font-size: 2rem;"></i></h3>
                    <h5>Theses List</h5>
                    <p class="card-text">View and manage all bachelor theses.</p>
                    <a href="theses-list" class="btn btn-primary">View Theses</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-body text-center">
                    <h3 class="card-title"><i class="bi bi-people mb-3" style="font-size: 2rem;"></i></h3>
                    <h5>User Management</h5>
                    <p class="card-text">Manage users and their roles.</p>
                    <a href="user-management" class="btn btn-primary">Manage Users</a>
                </div>
            </div>
        </div>
    </div>
</div>
